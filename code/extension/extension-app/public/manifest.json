{
    "name": "fb-ref-extension",
    "description": "FB REF Extension",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "permissions": [
        "activeTab"
    ],
    "optional_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "/content.css"
            ],
            "js": [
                "./content.js"
            ],
            "all_frames": false,
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "main.js",
        "localDB.js"
    ]
}